---
import Layout from "@/layouts/Layout.astro";
import { getPopularManga, getLatestChapters } from "@/lib/mangadex";
import { HotUpdates } from "@/components/home/HotUpdates";
import { LatestUpdates } from "@/components/home/LatestUpdates";
import { SidebarRanking } from "@/components/home/SidebarRanking";
import { GlobalComments } from "@/components/home/GlobalComments";

// Fetch data on server
const [popularManga, latestChapters] = await Promise.all([
  getPopularManga(10), 
  getLatestChapters(16)
]);
---

<Layout title="Pulse Manga - Read Manga Online">
  <div class="pb-10">
    {/* Banner Ad Slot */}
    <div class="container mx-auto px-4 mt-4 mb-2 hidden">
      <div class="h-24 bg-surface border border-border flex items-center justify-center text-text-muted text-sm">
        Advertisement
      </div>
    </div>

    {/* Hot Updates Slider */}
    <HotUpdates client:load initialData={popularManga} />

    <div class="container mx-auto px-4 mt-8 flex flex-col lg:flex-row gap-8">
      {/* Main Content */}
      <div class="flex-1 min-w-0">
        <LatestUpdates client:load initialData={latestChapters} />
      </div>

      {/* Sidebar */}
      <aside class="w-full lg:w-[320px] flex-shrink-0">
        <SidebarRanking client:visible initialData={popularManga} />
        {/* Sidebar Ad */}
        <div class="mt-8 h-64 bg-surface/30 border border-border rounded flex items-center justify-center text-text-muted text-xs">
          Ad Space
        </div>
      </aside>
    </div>

    <div class="container mx-auto px-4">
      <GlobalComments client:visible />
    </div>
  </div>
</Layout>
